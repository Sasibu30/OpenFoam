// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
FoamFile
{
    version         2;
    format          ascii;
    class           dictionary;
    object          controlDict;
}

libs            ( "liboverset.so" );

application     overPimpleDyMFoam;

startFrom       latestTime;

startTime       0;

stopAt          endTime;

endTime         10;

deltaT          1e-05;

writeControl    adjustableRunTime;

writeInterval   0.05;

purgeWrite      0;

writeFormat     ascii;

writePrecision  12;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

adjustTimeStep  yes;

maxCo           0.3;

functions
{
    vortex1
    {
        type            vorticity;
        libs            ( fieldFunctionObjects );
        field           U;
        executeControl  writeTime;
        writeControl    writeTime;
    }
    forces
    {
        type            forceCoeffs;
        libs            ( forces );
        writeControl    timeStep;
        timeInterval    1;
        log             no;
        patches         ( walls );
        rho             rhoInf;
        rhoInf          1;
        liftDir         ( 0 1 0 );
        dragDir         ( 1 0 0 );
        CofR            ( 0 0 0 );
        pitchAxis       ( 0 0 1 );
        magUInf         1;
        lRef            1;
        Aref            1;
    }
}


