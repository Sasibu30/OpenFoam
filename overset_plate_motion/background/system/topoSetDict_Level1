FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      topoSetDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

x0  -20; x1 40;
y0  -7; y1 7;
z0  0; z1 1;

actions
(

        {
        name    refinedCells;
        type    cellSet;
        action  new;
        source  boxToCell;
        sourceInfo
        {
            box ($x0 $y0 $z0) ($x1 $y1 $z1);
        }
    }
    {
        name    refinedCells;
        type    cellZoneSet;
        action  new;
        source  setToCellZone;
        sourceInfo
        {
            set refinedCells;
        }
    }

);

