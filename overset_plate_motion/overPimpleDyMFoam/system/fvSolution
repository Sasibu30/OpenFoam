FoamFile
{
    version         2;
    format          ascii;
    class           dictionary;
    object          fvSolution;
}

solvers
{
    cellDisplacement
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-06;
        relTol          0;
        maxIter         100;
    }
    p
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-05;
        relTol          0.1;
    }
    pFinal
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-06;
        relTol          0.1;
    }
    pcorr
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-07;
        relTol          0.1;
    }
    pcorrFinal
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-07;
        relTol          0;
    }
    "(U|k|epsilon)"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-06;
        relTol          0.1;
    }
    "(U|k|epsilon)Final"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-06;
        relTol          0.1;
    }
    Phi
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-07;
        relTol          0;
    }
}

PIMPLE
{
    momentumPredictor true;
    correctPhi      true;
    nOuterCorrectors 10;
    nCorrectors     1;
    nNonOrthogonalCorrectors 1;
    massFluxInterpolation false;
    ddtCorr         false;
    turbOnFinalIterOnly false;
    residualControl
    {
        U
        {
            tolerance       1e-06;
            relTol          0;
        }
        p
        {
            tolerance       1e-05;
            relTol          0;
        }
    }
}

SIMPLE
{
    nNonOrthogonalCorrectors 0;
    pRefCell        0;
    pRefValue       0;
    residualControl
    {
        p               1e-05;
        U               1e-05;
        nuTilda         1e-05;
    }
}

relaxationFactors
{
    fields
    {
        p               1;
        pFinal          1;
    }
    equations
    {
        U               1;
        UFinal          1;
    }
}


