FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

defaultFieldValues
(
    volScalarFieldValue zoneID 123
);

regions
(
    // Set cell values
    // (does zerogradient on boundaries)
    zoneToCell
    {
        zone backgroundZone;

        fieldValues
        (
            volScalarFieldValue zoneID 0
        );
    }
    zoneToCell
    {
        zone plate1;

        fieldValues
        (
            volScalarFieldValue zoneID 1
        );
    }
    zoneToCell
    {
        zone plate2;

        fieldValues
        (
            volScalarFieldValue zoneID 2
        );
    }
);

